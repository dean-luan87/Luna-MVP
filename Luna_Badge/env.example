# Luna Badge 环境变量配置
# Luna Badge Environment Variables
#
# 使用方法：
# 1. 复制此文件为 .env
# 2. 根据实际情况修改配置值
# 3. 系统会自动加载环境变量覆盖配置
#
# Usage:
# 1. Copy this file to .env
# 2. Modify values according to your needs
# 3. System will automatically load environment variables to override configs

# ============================================
# 系统配置 / System Configuration
# ============================================

# 日志级别 (debug, info, warning, error)
LUNA_CONFIG_SYSTEM_LOG_LEVEL=info

# 启动模式 (active, idle, sleep, off)
LUNA_CONFIG_SYSTEM_STARTUP_MODE=active

# 语言设置
LUNA_CONFIG_SYSTEM_LANGUAGE=zh-CN

# 自动更新
LUNA_CONFIG_SYSTEM_AUTO_UPDATE=false

# ============================================
# AI模型配置 / AI Models Configuration
# ============================================

# YOLO置信度阈值
LUNA_CONFIG_AI_MODELS_YOLO_CONFIDENCE_THRESHOLD=0.5

# Whisper模型大小
LUNA_CONFIG_AI_MODELS_WHISPER_MODEL_SIZE=base

# OCR引擎
LUNA_CONFIG_AI_MODELS_OCR_ENGINE=paddleocr

# ============================================
# 硬件配置 / Hardware Configuration
# ============================================

# 摄像头分辨率
LUNA_CONFIG_HARDWARE_CAMERA_RESOLUTION=640x480

# 摄像头帧率
LUNA_CONFIG_HARDWARE_CAMERA_FPS=30

# 麦克风采样率
LUNA_CONFIG_HARDWARE_MICROPHONE_SAMPLE_RATE=16000

# 扬声器音量 (0.0-1.0)
LUNA_CONFIG_HARDWARE_SPEAKER_VOLUME=0.8

# ============================================
# TTS配置 / TTS Configuration
# ============================================

# 默认语音
LUNA_CONFIG_TTS_DEFAULT_VOICE=zh-CN-XiaoxiaoNeural

# 语音速度
LUNA_CONFIG_TTS_SPEECH_SPEED=1.0

# 语音音调
LUNA_CONFIG_TTS_SPEECH_PITCH=1.0

# ============================================
# 导航配置 / Navigation Configuration
# ============================================

# 最大路径长度
LUNA_CONFIG_NAVIGATION_PATH_PLANNING_MAX_PATH_LENGTH=1000

# 路径缓存大小
LUNA_CONFIG_NAVIGATION_PATH_PLANNING_PATH_CACHE_SIZE=100

# 启用环境检测
LUNA_CONFIG_NAVIGATION_BASIC_ENVIRONMENT_DETECTION=true

# 启用语音导航
LUNA_CONFIG_NAVIGATION_BASIC_SPEECH_ROUTE_UNDERSTAND=true

# ============================================
# 模块配置 / Modules Configuration
# ============================================

# 视觉检测模块
LUNA_CONFIG_MODULES_VISION_SIGNBOARD_DETECTOR=true
LUNA_CONFIG_MODULES_VISION_HAZARD_DETECTOR=true
LUNA_CONFIG_MODULES_VISION_CROWD_DETECTOR=true

# 导航模块
LUNA_CONFIG_MODULES_NAVIGATION_PATH_EVALUATOR=true
LUNA_CONFIG_MODULES_NAVIGATION_DOORPLATE_INFERENCE=true

# 记忆模块
LUNA_CONFIG_MODULES_MEMORY_MEMORY_STORE=true
LUNA_CONFIG_MODULES_MEMORY_MEMORY_CALLER=true

# 通信模块
LUNA_CONFIG_MODULES_COMMUNICATION_TTS=true
LUNA_CONFIG_MODULES_COMMUNICATION_WHISPER=true
LUNA_CONFIG_MODULES_COMMUNICATION_WAKEUP=true

# 调试模式
LUNA_CONFIG_MODULES_OTHER_DEBUG_MODE=false

